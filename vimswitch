#!/bin/bash

PROJDIR=~/Projects/VimSwitch

####################

cd $PROJDIR
git submodule init
git submodule update

for i in `ls`
do
  if [ -d $i ]; then
    cd $i
    git submodule init
    git submodule update
    git pull
    cd ..
  fi
done

who=$1

if [ -h ~/.vim ]; then
  mv ~/.vim ~/.vim.old
  ln -s $PROJDIR/$who ~/.vim
  mv ~/.vimrc ~/.vimrc.old
  ln -s ~/.vim/.vimrc ~/.vimrc
  echo "Switched to $who. Remember to source .vimrc and do BundleInstall"
fi
